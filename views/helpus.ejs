}
.center12{
display: flex;
align-items: center;
}
.grid-container {
  display: grid;
  gap: 50px 50px;
  grid-template-columns: auto auto;
  
  padding: 10px;
}

.grid-item {
  
  border: 1px solid rgba(0, 0, 0, 0.8);
  padding: 10px;
  font-size: 30px;
  text-align: center;
  height: auto;
  width: 100%;
}
.image{
    padding-top: 5%;
    padding-left: 2%;
    padding-right: 2%;
   width: 98%;
}

      </style>
