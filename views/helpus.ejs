    <div class="grid-container container">

              <% data.forEach(function(item){ %>


                <div class="grid-item">
                  <img src="data:image/<%=item.img.contentType%>;base64,
                  <%=item.img.data.toString('base64')%>" class="image">
                    <h5 style="margin-top: 4%;">Name: <%=item.name%>  </h5>
                    <h5>contact: <%=item.contact%>  </h5>
                 <%   if(item.address==null) { %>
                   <h5> <a href="http://www.google.com/maps/place/'+<%=item.latitude%>+','+<%=item.longitude%>'" target="_blank">Google Maps</a></h5>
                  <% } else { %>
                    <h5>Address:<%=item.address%> </h5>
                  <% } %>
                  </div>
                <% }) %>
               
              </div>
      
        

    
    
    <div class="container-fluid">
        <hr style="margin-top: 4% !important;">

     <div class="container-fluid footer" >
      <img src="insta.png" alt=""  width="50px" style="margin-right: 3%;">
      <img src="fb.png" alt=""  width="40px">
     </div>
    </div>
